{% extends 'base.html.twig' %}


{% block body %}

    <div class="ad-title2">
        <div class="container">
            <h1>
                {{ session.author }}
            </h1>
            <p>
                {{ session.datetime | date }}
            </p>
            <p class="h2">
                {{ session.summary }}
            </p>
            <section id="feedback">
                <feedback session-id="{{ session.id }}"></feedback>
            </section>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('js/feedback') }}

{% endblock %}
