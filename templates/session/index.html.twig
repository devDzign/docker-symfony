{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-3">Session manager</h1>
        <div class="row">
            {% for session in sessions %}

                {% set url = path('session_detail', {'id': session.id}) %}

                <div class="col-md-4">
                    <div class="card bg-light mb-3">
                        <div class="card-header text-center">
                            Test - {{ session.id }}
                        </div>


                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="{{ url }}">
                                    {{ session.author }} - {{ session.datetime | date }}
                                </a>
                            </h4>

                            <p class="card-text">
                                {{ session.summary }}
                            </p>
                            <a href="{{ url }} }}" class="btn btn-secondary">
                                En savoir plus !
                            </a>
                        </div>

                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}
